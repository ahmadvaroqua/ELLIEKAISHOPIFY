      <div class="left-column">
        <h2>Upcoming Shows</h2>
        {{#each shows}}
          <div class="show">
            <h3>{{title}}</h3>
            <h4>{{location}}</h4>
            <p class="date">
              {{human_dates}}
            </p>
            <p class="details">
              {{city}}
            </p>
            <p class="details">
              Contact for details: <a href="mailto:{{primary_consultant_email}}">{{primary_consultant_email}}</a>
            </p>
          </div>
        {{/each}}
      </div>
